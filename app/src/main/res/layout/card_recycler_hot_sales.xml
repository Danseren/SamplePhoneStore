<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/layout_padding"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/card_hot_sales_width"
        android:layout_height="@dimen/card_hot_sales_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="@dimen/corner_radius_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/cardContainer">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:background="@drawable/btn_new"
                android:minWidth="@dimen/hot_sales_btn_min_height_width"
                android:minHeight="@dimen/hot_sales_btn_min_height_width"
                android:text="@string/btn_new"
                android:textSize="@dimen/text_size_small"
                android:layout_marginStart="@dimen/hot_sales_btn_margin_left"
                android:layout_marginTop="@dimen/hot_sales_btn_margin_top"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:visibility="invisible"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/hot_sales_margin_start"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/hot_sales_margin_start"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:text="@string/btn_buy_now"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/hot_sales_margin_start"
                android:layout_marginTop="@dimen/hot_sales_btn_margin_top"
                android:textSize="@dimen/text_size_small"
                android:textAllCaps="false"
                android:minHeight="@dimen/hot_sales_btn_min_height"
                android:minWidth="@dimen/hot_sales_btn_min_width"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>